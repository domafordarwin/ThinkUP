<div class="max-w-3xl mx-auto px-4 sm:px-6 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="page-title"><%= @user.name %></h1>
    <%= link_to "수정", edit_system_admin_user_path(@user), class: "btn-secondary" %>
  </div>

  <div class="card-flat p-6">
    <div class="space-y-5">
      <div class="flex items-start justify-between py-3 border-b border-ink-100">
        <span class="text-sm font-semibold text-ink-500 w-32 shrink-0">이메일</span>
        <p class="text-sm text-ink-900"><%= @user.email %></p>
      </div>
      <div class="flex items-start justify-between py-3 border-b border-ink-100">
        <span class="text-sm font-semibold text-ink-500 w-32 shrink-0">역할</span>
        <span class="badge bg-primary-50 text-primary-700"><%= @user.role %></span>
      </div>
      <% if @user.student? %>
        <div class="flex items-start justify-between py-3 border-b border-ink-100">
          <span class="text-sm font-semibold text-ink-500 w-32 shrink-0">학년</span>
          <span class="badge bg-sage-50 text-sage-600"><%= @user.grade_level %>학년</span>
        </div>
        <div class="flex items-start justify-between py-3 border-b border-ink-100">
          <span class="text-sm font-semibold text-ink-500 w-32 shrink-0">사고력 수준</span>
          <span class="badge bg-warm-50 text-warm-600"><%= @user.thinking_level %>단계</span>
        </div>
      <% end %>
      <div class="flex items-start justify-between py-3 border-b border-ink-100">
        <span class="text-sm font-semibold text-ink-500 w-32 shrink-0">가입일</span>
        <p class="text-sm text-ink-900"><%= @user.created_at.strftime("%Y-%m-%d %H:%M") %></p>
      </div>
      <% if @user.schools.any? %>
        <div class="flex items-start justify-between py-3">
          <span class="text-sm font-semibold text-ink-500 w-32 shrink-0">소속 학교</span>
          <div class="flex flex-wrap gap-2">
            <% @user.schools.each do |school| %>
              <span class="badge bg-primary-50 text-primary-700"><%= school.name %></span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="mt-6">
    <%= link_to "목록으로", system_admin_users_path, class: "btn-secondary" %>
  </div>
</div>
