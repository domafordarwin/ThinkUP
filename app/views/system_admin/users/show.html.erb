<div class="max-w-3xl mx-auto p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold"><%= @user.name %></h1>
    <%= link_to "수정", edit_system_admin_user_path(@user), class: "text-blue-600" %>
  </div>

  <div class="bg-white rounded-lg shadow p-6 space-y-4">
    <div>
      <span class="text-sm text-gray-500">이메일</span>
      <p><%= @user.email %></p>
    </div>
    <div>
      <span class="text-sm text-gray-500">역할</span>
      <p><span class="px-2 py-1 bg-gray-100 rounded text-sm"><%= @user.role %></span></p>
    </div>
    <% if @user.student? %>
      <div>
        <span class="text-sm text-gray-500">학년</span>
        <p><%= @user.grade_level %>학년</p>
      </div>
      <div>
        <span class="text-sm text-gray-500">사고력 수준</span>
        <p><%= @user.thinking_level %>단계</p>
      </div>
    <% end %>
    <div>
      <span class="text-sm text-gray-500">가입일</span>
      <p><%= @user.created_at.strftime("%Y-%m-%d %H:%M") %></p>
    </div>
    <% if @user.schools.any? %>
      <div>
        <span class="text-sm text-gray-500">소속 학교</span>
        <p><%= @user.schools.map(&:name).join(", ") %></p>
      </div>
    <% end %>
  </div>

  <div class="mt-4">
    <%= link_to "목록으로", system_admin_users_path, class: "text-gray-600" %>
  </div>
</div>
