<%= form_with(model: [:system_admin, user], class: "space-y-5") do |f| %>
  <% if user.errors.any? %>
    <div class="card-flat border-red-200 bg-red-50 p-4">
      <p class="text-sm font-medium text-red-800 mb-2">입력 오류가 있습니다</p>
      <ul class="list-disc list-inside text-sm text-red-600 space-y-1">
        <% user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, "이름", class: "block text-sm font-semibold text-ink-700 mb-1.5" %>
    <%= f.text_field :name, class: "input-field", required: true, placeholder: "이름을 입력하세요" %>
  </div>

  <div>
    <%= f.label :email, "이메일", class: "block text-sm font-semibold text-ink-700 mb-1.5" %>
    <%= f.email_field :email, class: "input-field", required: true, placeholder: "이메일 주소를 입력하세요" %>
  </div>

  <div>
    <%= f.label :password, "비밀번호#{user.persisted? ? ' (변경 시에만 입력)' : ''}", class: "block text-sm font-semibold text-ink-700 mb-1.5" %>
    <%= f.password_field :password, class: "input-field", required: user.new_record? %>
  </div>

  <div>
    <%= f.label :role, "역할", class: "block text-sm font-semibold text-ink-700 mb-1.5" %>
    <%= f.select :role, User.roles.keys.map { |r| [r, r] }, {}, class: "input-field" %>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
    <div>
      <%= f.label :grade_level, "학년 (학생인 경우)", class: "block text-sm font-semibold text-ink-700 mb-1.5" %>
      <%= f.number_field :grade_level, class: "input-field", min: 1, max: 12 %>
    </div>

    <div>
      <%= f.label :thinking_level, "사고력 수준", class: "block text-sm font-semibold text-ink-700 mb-1.5" %>
      <%= f.number_field :thinking_level, class: "input-field", min: 1, max: 5 %>
    </div>
  </div>

  <div class="flex items-center gap-3 pt-2">
    <%= f.submit user.persisted? ? "저장" : "생성", class: "btn-primary btn-lg cursor-pointer" %>
    <%= link_to "취소", system_admin_users_path, class: "btn-secondary" %>
  </div>
<% end %>
