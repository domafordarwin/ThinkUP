<%= form_with(model: [:system_admin, user], class: "space-y-4") do |f| %>
  <% if user.errors.any? %>
    <div class="bg-red-100 text-red-800 p-3 rounded">
      <% user.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>

  <div>
    <%= f.label :name, "이름", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :name, class: "w-full border rounded px-3 py-2", required: true %>
  </div>

  <div>
    <%= f.label :email, "이메일", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.email_field :email, class: "w-full border rounded px-3 py-2", required: true %>
  </div>

  <div>
    <%= f.label :password, "비밀번호#{user.persisted? ? ' (변경 시에만 입력)' : ''}", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.password_field :password, class: "w-full border rounded px-3 py-2", required: user.new_record? %>
  </div>

  <div>
    <%= f.label :role, "역할", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.select :role, User.roles.keys.map { |r| [r, r] }, {}, class: "w-full border rounded px-3 py-2" %>
  </div>

  <div>
    <%= f.label :grade_level, "학년 (학생인 경우)", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.number_field :grade_level, class: "w-full border rounded px-3 py-2", min: 1, max: 12 %>
  </div>

  <div>
    <%= f.label :thinking_level, "사고력 수준", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.number_field :thinking_level, class: "w-full border rounded px-3 py-2", min: 1, max: 5 %>
  </div>

  <div>
    <%= f.submit user.persisted? ? "저장" : "생성", class: "bg-blue-600 text-white px-6 py-2 rounded cursor-pointer" %>
    <%= link_to "취소", system_admin_users_path, class: "ml-4 text-gray-600" %>
  </div>
<% end %>
