<div class="max-w-5xl mx-auto p-4 sm:p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-xl sm:text-2xl font-bold">계정 관리</h1>
    <%= link_to "새 사용자", new_system_admin_user_path, class: "bg-blue-600 text-white px-4 py-2 rounded" %>
  </div>

  <div class="flex gap-2 mb-4 flex-wrap">
    <%= link_to "전체", system_admin_users_path, class: "px-3 py-1 rounded-full text-sm #{params[:role].blank? ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700'}" %>
    <% User.roles.keys.each do |role| %>
      <%= link_to I18n.t("roles.#{role}", default: role), system_admin_users_path(role: role),
          class: "px-3 py-1 rounded-full text-sm #{params[:role] == role ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700'}" %>
    <% end %>
  </div>

  <div class="bg-white rounded-lg shadow overflow-x-auto">
    <table class="w-full text-sm">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-4 py-3 text-left">이름</th>
          <th class="px-4 py-3 text-left">이메일</th>
          <th class="px-4 py-3 text-left">역할</th>
          <th class="px-4 py-3 text-left">가입일</th>
          <th class="px-4 py-3"></th>
        </tr>
      </thead>
      <tbody class="divide-y">
        <% @users.each do |user| %>
          <tr>
            <td class="px-4 py-3"><%= user.name %></td>
            <td class="px-4 py-3 text-gray-500"><%= user.email %></td>
            <td class="px-4 py-3"><span class="px-2 py-1 bg-gray-100 rounded text-xs"><%= user.role %></span></td>
            <td class="px-4 py-3 text-gray-500"><%= user.created_at.strftime("%Y-%m-%d") %></td>
            <td class="px-4 py-3 text-right">
              <%= link_to "보기", system_admin_user_path(user), class: "text-blue-600 text-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <p class="mt-4 text-sm text-gray-500">총 <%= @users.count %>명</p>
</div>
