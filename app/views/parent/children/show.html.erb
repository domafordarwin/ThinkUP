<div class="max-w-4xl mx-auto px-4 sm:px-6 py-8">
  <h1 class="page-title mb-2"><%= @child.name %>의 학습 현황</h1>
  <div class="flex flex-wrap gap-2 mb-8">
    <span class="badge bg-primary-50 text-primary-700"><%= @child.grade_level %>학년</span>
  </div>

  <%# 요약 카드 %>
  <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-10">
    <div class="stat-card border-t-4 border-primary-500">
      <p class="text-3xl font-bold text-primary-600 mb-1"><%= @stats[:total_sessions] %></p>
      <p class="text-sm text-ink-500">완료한 학습</p>
    </div>
    <div class="stat-card border-t-4 border-sage-500">
      <p class="text-3xl font-bold text-sage-600 mb-1"><%= @stats[:bloom_distribution].values.sum %></p>
      <p class="text-sm text-ink-500">생성한 발문</p>
    </div>
    <div class="stat-card border-t-4 border-warm-500">
      <% avg = @stats[:competency_averages].values %>
      <p class="text-3xl font-bold text-warm-600 mb-1"><%= avg.any? ? (avg.sum / avg.size).round(1) : "-" %></p>
      <p class="text-sm text-ink-500">평균 역량 점수</p>
    </div>
  </div>

  <%# 역량 점수 %>
  <section class="mb-10">
    <h2 class="section-title mb-5">역량 점수</h2>
    <% competency_labels = { "comprehension" => "이해력", "aesthetic" => "심미적 감수성", "communication" => "의사소통 능력" } %>
    <% competency_colors = %w[border-primary-500 border-sage-500 border-warm-500] %>
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
      <% competency_labels.each_with_index do |(key, label), idx| %>
        <div class="stat-card border-t-4 <%= competency_colors[idx] %>">
          <p class="text-2xl font-bold text-primary-600 mb-1"><%= @stats[:competency_averages][key] || "-" %></p>
          <p class="text-sm text-ink-500"><%= label %></p>
        </div>
      <% end %>
    </div>
  </section>

  <%# 최근 학습 기록 %>
  <section>
    <h2 class="section-title mb-5">최근 학습 기록</h2>
    <div class="space-y-3">
      <% @sessions.each do |session| %>
        <div class="card p-5">
          <div class="flex justify-between items-center mb-2">
            <span class="font-bold text-ink-900"><%= session.passage.title %></span>
            <span class="text-sm text-ink-400"><%= session.created_at.strftime("%Y-%m-%d") %></span>
          </div>
          <% if session.session_summary %>
            <p class="text-sm text-ink-600 leading-relaxed mb-2"><%= session.session_summary.summary %></p>
            <% if session.session_summary.highlight_question.present? %>
              <div class="border-l-4 border-primary-200 pl-3 mt-2">
                <p class="text-sm italic text-primary-600">"<%= session.session_summary.highlight_question %>"</p>
              </div>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </section>

  <div class="mt-8">
    <%= link_to "자녀 목록", parent_children_path, class: "btn-secondary" %>
  </div>
</div>
