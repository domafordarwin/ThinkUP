<div class="min-h-[80vh] flex items-center justify-center -mt-8">
  <div class="w-full max-w-md" data-controller="quick-login">

    <%# Logo & Title %>
    <div class="text-center mb-8">
      <h1 class="text-3xl font-extrabold tracking-tight text-ink-950 mb-2">
        Think<span class="text-primary-600">Up</span>
      </h1>
      <p class="text-ink-400">발문으로 키우는 사고력</p>
    </div>

    <%# Login Form %>
    <div class="card-flat p-6 sm:p-8">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="space-y-4">
          <div>
            <%= f.label :email, "이메일", class: "block text-sm font-semibold text-ink-700 mb-1.5" %>
            <%= f.email_field :email,
                autofocus: true,
                autocomplete: "email",
                class: "input-field",
                placeholder: "이메일 주소를 입력하세요",
                data: { quick_login_target: "email" } %>
          </div>

          <div>
            <%= f.label :password, "비밀번호", class: "block text-sm font-semibold text-ink-700 mb-1.5" %>
            <%= f.password_field :password,
                autocomplete: "current-password",
                class: "input-field",
                placeholder: "비밀번호를 입력하세요",
                data: { quick_login_target: "password" } %>
          </div>

          <% if devise_mapping.rememberable? %>
            <label class="flex items-center gap-2 cursor-pointer">
              <%= f.check_box :remember_me, class: "w-4 h-4 rounded border-ink-300 text-primary-600 focus:ring-primary-500" %>
              <span class="text-sm text-ink-500">로그인 상태 유지</span>
            </label>
          <% end %>

          <div class="pt-2">
            <%= f.submit "로그인",
                class: "btn-primary btn-lg w-full justify-center cursor-pointer" %>
          </div>
        </div>
      <% end %>
    </div>

    <%# Quick Login Buttons %>
    <% if Rails.env.development? %>
      <div class="mt-8">
        <div class="flex items-center gap-3 mb-4">
          <div class="divider-ink flex-1"></div>
          <span class="text-xs font-semibold text-ink-300 uppercase tracking-wider">테스트 계정</span>
          <div class="divider-ink flex-1" style="background: linear-gradient(to left, var(--color-ink-200), transparent)"></div>
        </div>

        <div class="grid grid-cols-2 sm:grid-cols-3 gap-2.5">
          <button type="button"
                  data-action="click->quick-login#fill"
                  data-email="student@thinkup.kr"
                  data-password="password123"
                  class="group card-flat p-3 text-left hover:border-primary-200 hover:bg-primary-50/50 transition-all cursor-pointer">
            <div class="flex items-center gap-2.5 mb-1.5">
              <span class="w-7 h-7 rounded-md bg-primary-100 flex items-center justify-center">
                <svg class="w-3.5 h-3.5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/></svg>
              </span>
              <span class="text-sm font-bold text-ink-800">학생</span>
            </div>
            <p class="text-[11px] text-ink-400 truncate">student@thinkup.kr</p>
          </button>

          <button type="button"
                  data-action="click->quick-login#fill"
                  data-email="parent@thinkup.kr"
                  data-password="password123"
