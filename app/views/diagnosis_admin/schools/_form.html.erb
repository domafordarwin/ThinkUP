<%= form_with(model: [:diagnosis_admin, school], class: "space-y-4") do |f| %>
  <% if school.errors.any? %>
    <div class="bg-red-100 p-3 rounded text-red-700">
      <% school.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>

  <div>
    <%= f.label :name, "학교명", class: "block font-semibold" %>
    <%= f.text_field :name, class: "w-full border rounded px-3 py-2" %>
  </div>

  <div>
    <%= f.label :region, "지역", class: "block font-semibold" %>
    <%= f.text_field :region, class: "w-full border rounded px-3 py-2" %>
  </div>

  <div>
    <label class="block font-semibold">학교 담당자 (선택)</label>
    <%= select_tag :admin_user_id,
      options_from_collection_for_select(User.where(role: :school_admin), :id, :name),
      include_blank: "선택 안함", class: "w-full border rounded px-3 py-2" %>
  </div>

  <%= f.submit school.persisted? ? "수정" : "등록", class: "bg-blue-600 text-white px-6 py-2 rounded cursor-pointer" %>
<% end %>
