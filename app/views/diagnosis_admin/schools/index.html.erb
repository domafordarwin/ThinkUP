<div class="max-w-4xl mx-auto p-4 sm:p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-xl sm:text-2xl font-bold">학교 관리</h1>
    <%= link_to "학교 등록", new_diagnosis_admin_school_path, class: "bg-blue-600 text-white px-4 py-2 rounded text-sm" %>
  </div>

  <div class="space-y-3">
    <% @schools.each do |school| %>
      <div class="border rounded-lg p-3 sm:p-4 flex justify-between items-center">
        <div>
          <h2 class="font-semibold text-base sm:text-lg"><%= school.name %></h2>
          <p class="text-xs sm:text-sm text-gray-500">
            <%= school.region %> |
            학생 <%= school.school_enrollments.student_member.count %>명 |
            프로그램 <%= school.programs.count %>개
          </p>
        </div>
        <%= link_to "상세", diagnosis_admin_school_path(school), class: "text-blue-600 text-sm" %>
      </div>
    <% end %>
  </div>
</div>
