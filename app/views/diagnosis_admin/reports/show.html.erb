<div class="max-w-4xl mx-auto px-4 sm:px-6 py-8">
  <h1 class="page-title mb-2">
    <% case @report.report_type %>
    <% when "student_report" %>
      학생 활동 보고서 -- <%= @report.user&.name %>
    <% when "school_report" %>
      학교 활동 보고서 -- <%= @report.school&.name %>
    <% when "overall_report" %>
      전체 활동 보고서
    <% end %>
  </h1>
  <div class="flex flex-wrap gap-2 mb-8">
    <span class="badge bg-primary-50 text-primary-700"><%= @report.period_start.strftime("%Y-%m-%d") %> ~ <%= @report.period_end.strftime("%Y-%m-%d") %></span>
    <span class="badge bg-accent-50 text-accent-600">생성: <%= @report.generated_by.name %></span>
  </div>

  <% data = @report.data %>

  <%# 요약 카드 %>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-10">
    <% if data["total_schools"] %>
      <div class="stat-card border-t-4 border-primary-500">
        <p class="text-3xl font-bold text-primary-600 mb-1"><%= data["total_schools"] %></p>
        <p class="text-sm text-gray-500">학교</p>
      </div>
    <% end %>
    <% if data["total_students"] %>
      <div class="stat-card border-t-4 border-accent-500">
        <p class="text-3xl font-bold text-accent-600 mb-1"><%= data["total_students"] %></p>
        <p class="text-sm text-gray-500">학생</p>
      </div>
    <% end %>
    <div class="stat-card border-t-4 border-warm-500">
      <p class="text-3xl font-bold text-warm-600 mb-1"><%= data["total_sessions"] || 0 %></p>
      <p class="text-sm text-gray-500">완료 세션</p>
    </div>
    <div class="stat-card border-t-4 border-primary-200">
      <p class="text-3xl font-bold text-primary-600 mb-1"><%= data["questions_count"] || 0 %></p>
      <p class="text-sm text-gray-500">생성 발문</p>
    </div>
  </div>

  <%# 블룸 분포 %>
  <% if data["bloom_distribution"].present? %>
    <section class="mb-10">
      <h2 class="section-title mb-5">블룸 분포</h2>
      <div class="card-flat p-6">
        <% bloom_labels = { "remember" => "기억", "understand" => "이해", "apply" => "적용", "analyze" => "분석", "evaluate" => "평가", "create_level" => "창조" } %>
        <% bloom_colors = { "remember" => "bg-blue-500", "understand" => "bg-green-500", "apply" => "bg-yellow-500", "analyze" => "bg-orange-500", "evaluate" => "bg-red-500", "create_level" => "bg-purple-500" } %>
        <% max_count = [data["bloom_distribution"].values.map(&:to_i).max || 1, 1].max %>
        <div class="space-y-4">
          <% bloom_labels.each do |level, label| %>
            <% count = data["bloom_distribution"][level] || 0 %>
            <div class="flex items-center gap-3">
              <span class="w-12 text-sm font-medium text-gray-600 text-right"><%= label %></span>
              <div class="flex-1">
                <div class="progress-bar">
                  <div class="progress-bar-fill <%= bloom_colors[level] || 'bg-primary-500' %>"
                       style="width: <%= [(count.to_f / max_count * 100).round, 3].max %>%"></div>
                </div>
              </div>
              <span class="w-8 text-sm font-semibold text-gray-700 text-right"><%= count %></span>
            </div>
          <% end %>
        </div>
      </div>
    </section>
  <% end %>

  <%# 역량 점수 %>
  <% if data["competency_averages"].present? && data["competency_averages"].any? %>
    <section class="mb-10">
      <h2 class="section-title mb-5">역량 점수</h2>
      <% competency_labels = { "comprehension" => "이해력", "aesthetic" => "심미적 감수성", "communication" => "의사소통 능력" } %>
      <% competency_colors = %w[border-primary-500 border-accent-500 border-warm-500] %>
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
        <% competency_labels.each_with_index do |(key, label), idx| %>
          <div class="stat-card border-t-4 <%= competency_colors[idx] %>">
            <p class="text-2xl font-bold text-primary-600 mb-1"><%= data["competency_averages"][key] || "-" %></p>
            <p class="text-sm text-gray-500"><%= label %></p>
          </div>
        <% end %>
      </div>
    </section>
  <% end %>

  <div class="mt-2">
    <%= link_to "보고서 목록", diagnosis_admin_reports_path, class: "btn-secondary" %>
  </div>
</div>
