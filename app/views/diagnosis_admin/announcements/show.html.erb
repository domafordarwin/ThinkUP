<div class="max-w-3xl mx-auto p-6">
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-2xl font-bold"><%= @announcement.title %></h1>
    <div class="flex gap-2">
      <%= link_to "수정", edit_diagnosis_admin_announcement_path(@announcement), class: "bg-ink-200 px-4 py-2 rounded text-sm" %>
      <%= button_to "삭제", diagnosis_admin_announcement_path(@announcement), method: :delete,
          data: { turbo_confirm: "정말 삭제하시겠습니까?" }, class: "bg-red-600 text-white px-4 py-2 rounded text-sm" %>
    </div>
  </div>
  <p class="text-sm text-ink-500 mb-6">
    작성: <%= @announcement.user.name %> |
    <% if @announcement.published_at %>
      공개: <%= @announcement.published_at.strftime("%Y-%m-%d %H:%M") %>
    <% else %>
      <span class="text-yellow-600">미공개</span>
    <% end %>
  </p>

  <div class="prose max-w-none">
    <p class="whitespace-pre-wrap"><%= @announcement.content %></p>
  </div>

  <div class="mt-6">
    <%= link_to "목록으로", diagnosis_admin_announcements_path, class: "text-ink-600" %>
  </div>
</div>
