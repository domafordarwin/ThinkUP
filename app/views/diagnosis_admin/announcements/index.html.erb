<div class="max-w-4xl mx-auto px-4 sm:px-6 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="page-title">공지사항 관리</h1>
    <%= link_to new_diagnosis_admin_announcement_path, class: "btn-primary" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/></svg>
      공지 작성
    <% end %>
  </div>

  <div class="space-y-3">
    <% @announcements.each do |announcement| %>
      <div class="card p-5 flex justify-between items-center">
        <div>
          <h2 class="font-semibold text-gray-900 mb-1.5"><%= announcement.title %></h2>
          <div class="flex flex-wrap items-center gap-2">
            <span class="badge bg-primary-50 text-primary-700"><%= announcement.user.name %></span>
            <% if announcement.published_at %>
              <span class="badge bg-accent-50 text-accent-600"><%= announcement.published_at.strftime("%Y-%m-%d %H:%M") %></span>
            <% else %>
              <span class="badge bg-warm-50 text-warm-600">미공개</span>
            <% end %>
          </div>
        </div>
        <%= link_to "보기", diagnosis_admin_announcement_path(announcement), class: "btn-secondary text-sm" %>
      </div>
    <% end %>
  </div>
</div>
