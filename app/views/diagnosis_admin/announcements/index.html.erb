<div class="max-w-4xl mx-auto p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">공지사항 관리</h1>
    <%= link_to "공지 작성", new_diagnosis_admin_announcement_path, class: "bg-blue-600 text-white px-4 py-2 rounded" %>
  </div>

  <div class="space-y-3">
    <% @announcements.each do |announcement| %>
      <div class="border rounded-lg p-4 flex justify-between items-center">
        <div>
          <h2 class="font-medium"><%= announcement.title %></h2>
          <p class="text-sm text-gray-500">
            <%= announcement.user.name %> |
            <% if announcement.published_at %>
              공개: <%= announcement.published_at.strftime("%Y-%m-%d %H:%M") %>
            <% else %>
              <span class="text-yellow-600">미공개</span>
            <% end %>
          </p>
        </div>
        <%= link_to "보기", diagnosis_admin_announcement_path(announcement), class: "text-blue-600 text-sm" %>
      </div>
    <% end %>
  </div>
</div>
