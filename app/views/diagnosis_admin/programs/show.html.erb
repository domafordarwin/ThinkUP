<div class="max-w-4xl mx-auto p-6">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold"><%= @program.name %></h1>
      <p class="text-gray-500">
        <%= @program.starts_on.strftime("%Y-%m-%d") %> ~ <%= @program.ends_on.strftime("%Y-%m-%d") %> |
        대상: <%= @program.target_grade_min %>~<%= @program.target_grade_max %>학년
      </p>
    </div>
    <div class="flex gap-2">
      <%= link_to "수정", edit_diagnosis_admin_program_path(@program), class: "bg-gray-200 px-4 py-2 rounded text-sm" %>
      <%= button_to "삭제", diagnosis_admin_program_path(@program), method: :delete,
          data: { turbo_confirm: "정말 삭제하시겠습니까?" }, class: "bg-red-600 text-white px-4 py-2 rounded text-sm" %>
    </div>
  </div>

  <% if @program.description.present? %>
    <p class="text-gray-600 mb-6"><%= @program.description %></p>
  <% end %>

  <section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">배정 학교 (<%= @assignments.count %>개)</h2>
    <div class="space-y-2">
      <% @assignments.each do |assignment| %>
        <div class="border rounded p-3">
          <span class="font-medium"><%= assignment.school.name %></span>
          <span class="text-sm text-gray-500 ml-2"><%= assignment.school.region %></span>
        </div>
      <% end %>
    </div>
  </section>

  <section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">포함 지문 (<%= @passages.count %>개)</h2>
    <div class="space-y-2">
      <% @passages.each_with_index do |passage, i| %>
        <div class="border rounded p-3 flex justify-between">
          <span><%= i + 1 %>. <%= passage.title %></span>
          <span class="text-sm text-gray-500">난이도 <%= passage.difficulty %></span>
        </div>
      <% end %>
    </div>
  </section>

  <%= link_to "목록으로", diagnosis_admin_programs_path, class: "text-gray-600" %>
</div>
