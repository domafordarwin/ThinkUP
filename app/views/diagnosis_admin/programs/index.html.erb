<div class="max-w-4xl mx-auto p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">프로그램 관리</h1>
    <%= link_to "프로그램 생성", new_diagnosis_admin_program_path, class: "bg-blue-600 text-white px-4 py-2 rounded" %>
  </div>

  <div class="space-y-3">
    <% @programs.each do |program| %>
      <div class="border rounded-lg p-4">
        <div class="flex justify-between items-center">
          <h2 class="font-bold text-lg"><%= program.name %></h2>
          <span class="text-sm text-ink-500">
            <%= program.starts_on.strftime("%Y-%m-%d") %> ~ <%= program.ends_on.strftime("%Y-%m-%d") %>
          </span>
        </div>
        <p class="text-sm text-ink-600 mt-1">
          대상: <%= program.target_grade_min %>~<%= program.target_grade_max %>학년 |
          학교 <%= program.schools.count %>개 |
          지문 <%= program.passages.count %>개
        </p>
        <%= link_to "상세", diagnosis_admin_program_path(program), class: "text-blue-600 text-sm mt-2 inline-block" %>
      </div>
    <% end %>
  </div>
</div>
