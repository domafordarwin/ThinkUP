<div class="max-w-3xl mx-auto p-4 sm:p-6">
  <%# 지문 영역 %>
  <section class="mb-8">
    <h1 class="text-xl sm:text-2xl font-bold mb-2"><%= @passage.title %></h1>
    <span class="text-sm text-gray-500"><%= @passage.genre %> | 난이도 <%= @passage.difficulty %></span>
    <div class="mt-4 p-3 sm:p-4 bg-gray-50 rounded-lg leading-relaxed whitespace-pre-wrap text-sm sm:text-base"><%= @passage.content %></div>
  </section>

  <%# 기초 질문 응답 영역 %>
  <section class="mb-8">
    <h2 class="text-lg sm:text-xl font-semibold mb-4">기초 질문</h2>
    <% @base_questions.each do |bq| %>
      <div class="mb-4 p-3 sm:p-4 border rounded-lg">
        <p class="font-medium mb-2 text-sm sm:text-base">
          <span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded"><%= bq.bloom_level %></span>
          <%= bq.content %>
        </p>
        <% existing = @responses.find { |r| r.base_question_id == bq.id } %>
        <% if existing %>
          <p class="text-gray-700 bg-green-50 p-2 rounded text-sm sm:text-base"><%= existing.content %></p>
        <% else %>
          <%= form_with(model: [@session, Response.new], class: "mt-2") do |f| %>
            <%= f.hidden_field :base_question_id, value: bq.id %>
            <%= f.text_area :content, placeholder: "답변을 작성하세요...", rows: 2, class: "w-full border rounded px-3 py-2 text-sm sm:text-base" %>
            <%= f.submit "답변 제출", class: "mt-2 bg-blue-600 text-white px-4 py-1 rounded text-sm cursor-pointer" %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </section>

  <%# 발문 생성 영역 (기초 질문 완료 후 표시) %>
  <% if @session.base_completed? || @session.questioning? || @session.dialogue_active? || @session.completed? %>
    <section class="mb-8">
      <h2 class="text-lg sm:text-xl font-semibold mb-4">나만의 발문 만들기</h2>
      <p class="text-gray-600 mb-3 text-sm sm:text-base">이 지문을 읽고 떠오르는 질문을 만들어보세요.</p>

      <% @student_questions.each do |sq| %>
        <div class="mb-4 p-3 sm:p-4 border-l-4 border-purple-400 bg-purple-50 rounded">
          <p class="font-medium text-sm sm:text-base"><%= sq.content %></p>
          <% if sq.bloom_level %>
            <span class="text-xs bg-purple-200 text-purple-800 px-2 py-1 rounded">
              블룸: <%= sq.bloom_level %>
            </span>
          <% end %>

          <%# AI 심화 대화 %>
          <% if sq.ai_dialogues.any? %>
            <div class="mt-3 space-y-2" id="dialogue">
              <% sq.ai_dialogues.each do |d| %>
                <div class="<%= d.ai_prompt? ? 'bg-white' : 'bg-blue-50' %> p-2 rounded text-sm">
                  <strong><%= d.ai_prompt? ? 'AI' : '나' %>:</strong> <%= d.content %>
                </div>
              <% end %>
            </div>
          <% end %>

          <%# 대화 이어가기 %>
          <% if sq.ai_dialogues.size < 6 %>
            <%= form_with(url: learning_session_dialogues_path(@session), class: "mt-3") do |f| %>
              <%= f.hidden_field "dialogue[student_question_id]", value: sq.id %>
              <%= f.text_area "dialogue[content]", placeholder: "생각을 이어서 써보세요...", rows: 2, class: "w-full border rounded px-3 py-2 text-sm" %>
              <%= f.submit "대화 이어가기", class: "mt-1 bg-purple-600 text-white px-4 py-1 rounded text-sm cursor-pointer" %>
            <% end %>
          <% end %>
        </div>
      <% end %>

      <%= form_with(model: [@session, StudentQuestion.new], class: "mt-4") do |f| %>
        <%= f.text_area :content, placeholder: "새로운 질문을 만들어보세요...", rows: 2, class: "w-full border rounded px-3 py-2 text-sm sm:text-base" %>
        <%= f.submit "발문 제출", class: "mt-2 bg-purple-600 text-white px-4 py-2 rounded cursor-pointer w-full sm:w-auto" %>
      <% end %>
    </section>
  <% end %>

  <%# 세션 완료 %>
  <% if @session.dialogue_active? && @student_questions.any? %>
    <div class="text-center">
      <%= button_to "학습 완료하기", complete_learning_session_path(@session),
          method: :post, class: "bg-green-600 text-white px-6 sm:px-8 py-3 rounded-lg text-lg w-full sm:w-auto" %>
    </div>
  <% end %>

  <%# 세션 요약 %>
  <% if @session.completed? && @session.session_summary %>
    <section class="mt-8 p-4 sm:p-6 bg-yellow-50 rounded-lg">
      <h2 class="text-lg sm:text-xl font-semibold mb-3">학습 요약</h2>
      <p class="mb-4 text-sm sm:text-base"><%= @session.session_summary.summary %></p>
      <% if @session.session_summary.highlight_question.present? %>
        <p class="italic text-purple-700 text-sm sm:text-base">"<%= @session.session_summary.highlight_question %>"</p>
      <% end %>
    </section>
  <% end %>
</div>
