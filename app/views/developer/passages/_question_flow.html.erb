<%# 발문 흐름도: 블룸 수준별 시각화 %>
<% bloom_config = {
  "remember"     => { label: "기억", bg: "bg-blue-50",   text: "text-blue-700",   border: "border-blue-300", dot: "bg-blue-500" },
  "understand"   => { label: "이해", bg: "bg-green-50",  text: "text-green-700",  border: "border-green-300", dot: "bg-green-500" },
  "apply"        => { label: "적용", bg: "bg-yellow-50", text: "text-yellow-700", border: "border-yellow-300", dot: "bg-yellow-500" },
  "analyze"      => { label: "분석", bg: "bg-orange-50", text: "text-orange-700", border: "border-orange-300", dot: "bg-orange-500" },
  "evaluate"     => { label: "평가", bg: "bg-red-50",    text: "text-red-700",    border: "border-red-300", dot: "bg-red-500" },
  "create_level" => { label: "창조", bg: "bg-purple-50", text: "text-purple-700", border: "border-purple-300", dot: "bg-purple-500" }
} %>

<div class="mb-8">
  <h3 class="section-title mb-4">블룸 수준 커버리지</h3>
  <div class="flex gap-2 flex-wrap">
    <% covered = passage.base_questions.pluck(:bloom_level).uniq %>
    <% bloom_config.each do |level, config| %>
      <% is_covered = covered.include?(level) %>
      <span class="badge <%= is_covered ? "#{config[:bg]} #{config[:text]}" : 'bg-ink-100 text-ink-400' %>">
        <%= config[:label] %>
        <% if is_covered %>
          <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/></svg>
        <% end %>
      </span>
    <% end %>
  </div>
  <p class="text-sm text-ink-500 mt-3">
    커버리지: <span class="font-bold text-ink-700"><%= covered.size %> / 3</span> (기초: 기억 / 이해 / 적용)
  </p>
</div>

<div class="mb-6">
  <h3 class="section-title mb-4">발문 흐름</h3>
  <div class="space-y-3">
    <% passage.base_questions.each_with_index do |bq, i| %>
      <% config = bloom_config[bq.bloom_level] || bloom_config["remember"] %>
      <div class="flex items-start gap-3">
        <div class="flex flex-col items-center">
          <div class="w-8 h-8 rounded-md flex items-center justify-center text-sm font-bold <%= config[:dot] %> text-white shadow-sm">
            <%= i + 1 %>
          </div>
          <% if i < passage.base_questions.count - 1 %>
            <div class="w-0.5 h-6 bg-ink-200 mt-1"></div>
          <% end %>
        </div>
        <div class="flex-1 card-flat p-4 border-l-4 <%= config[:border] %> <%= config[:bg] %>">
          <div class="flex justify-between items-center mb-1.5">
            <span class="badge <%= config[:bg] %> <%= config[:text] %> text-xs font-bold"><%= config[:label] %> 수준</span>
            <span class="text-xs text-ink-400">순서 #<%= bq.position %></span>
          </div>
          <p class="text-sm text-ink-700 leading-relaxed"><%= bq.content %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
