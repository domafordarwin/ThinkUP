<div class="max-w-4xl mx-auto p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">지문 관리</h1>
    <%= link_to "새 지문 등록", new_developer_passage_path, class: "bg-blue-600 text-white px-4 py-2 rounded" %>
  </div>

  <div class="space-y-4">
    <% @passages.each do |passage| %>
      <div class="border rounded-lg p-4">
        <div class="flex justify-between">
          <h2 class="font-semibold"><%= passage.title %></h2>
          <span class="text-sm text-gray-500"><%= passage.genre %> | 난이도 <%= passage.difficulty %></span>
        </div>
        <p class="text-sm text-gray-600 mt-1">대상: <%= passage.min_grade %>~<%= passage.max_grade %>학년</p>
        <div class="mt-2">
          <%= link_to "상세", developer_passage_path(passage), class: "text-blue-600 text-sm" %>
          <%= link_to "수정", edit_developer_passage_path(passage), class: "text-gray-600 text-sm ml-2" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
