<div class="max-w-4xl mx-auto px-4 sm:px-6 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="page-title">지문 관리</h1>
    <%= link_to new_developer_passage_path, class: "btn-primary" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/></svg>
      새 지문 등록
    <% end %>
  </div>

  <div class="space-y-4">
    <% @passages.each do |passage| %>
      <div class="card p-5">
        <div class="flex justify-between items-start">
          <div class="flex-1 min-w-0">
            <h2 class="text-base font-semibold text-gray-900 mb-2"><%= passage.title %></h2>
            <div class="flex flex-wrap gap-2">
              <span class="badge bg-primary-50 text-primary-700"><%= passage.genre %></span>
              <span class="badge bg-warm-50 text-warm-600">난이도 <%= passage.difficulty %></span>
              <span class="badge bg-accent-50 text-accent-600"><%= passage.min_grade %>~<%= passage.max_grade %>학년</span>
            </div>
          </div>
          <div class="flex items-center gap-3 ml-4 shrink-0">
            <%= link_to "상세", developer_passage_path(passage), class: "btn-primary text-xs" %>
            <%= link_to "수정", edit_developer_passage_path(passage), class: "btn-secondary text-xs" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
