<div class="max-w-3xl mx-auto p-6">
  <h1 class="text-2xl font-bold mb-2"><%= @member.name %></h1>
  <p class="text-gray-500 mb-6"><%= @member.email %> | <%= @member.role %></p>

  <% if @member.student? && @sessions %>
    <h2 class="text-xl font-semibold mb-4">학습 기록 (<%= @sessions.count %>회)</h2>
    <div class="space-y-3">
      <% @sessions.each do |session| %>
        <div class="border rounded-lg p-4">
          <div class="flex justify-between">
            <span class="font-medium"><%= session.passage.title %></span>
            <span class="text-sm text-gray-500"><%= session.created_at.strftime("%Y-%m-%d") %></span>
          </div>
          <span class="text-xs bg-<%= session.completed? ? 'green' : 'yellow' %>-100 px-2 py-1 rounded">
            <%= session.status %>
          </span>
          <% if session.session_summary %>
            <p class="text-sm text-gray-600 mt-2"><%= session.session_summary.summary %></p>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="mt-6">
    <%= link_to "목록으로", school_admin_members_path, class: "text-gray-600" %>
  </div>
</div>
