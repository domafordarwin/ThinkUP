<div class="max-w-4xl mx-auto p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">학교 구성원 관리</h1>
    <%= link_to "새 계정 생성", new_school_admin_member_path, class: "bg-blue-600 text-white px-4 py-2 rounded" %>
  </div>

  <section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">학생 (<%= @students.count %>명)</h2>
    <div class="space-y-2">
      <% @students.each do |student| %>
        <div class="border rounded-lg p-3 flex justify-between items-center">
          <div>
            <span class="font-medium"><%= student.name %></span>
            <span class="text-sm text-gray-500 ml-2"><%= student.email %></span>
            <span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded ml-2"><%= student.grade_level %>학년</span>
          </div>
          <%= link_to "상세", school_admin_member_path(student), class: "text-blue-600 text-sm" %>
        </div>
      <% end %>
    </div>
  </section>

  <section>
    <h2 class="text-xl font-semibold mb-4">학부모 (<%= @parents.count %>명)</h2>
    <div class="space-y-2">
      <% @parents.each do |parent| %>
        <div class="border rounded-lg p-3 flex justify-between items-center">
          <div>
            <span class="font-medium"><%= parent.name %></span>
            <span class="text-sm text-gray-500 ml-2"><%= parent.email %></span>
          </div>
          <%= link_to "상세", school_admin_member_path(parent), class: "text-blue-600 text-sm" %>
        </div>
      <% end %>
    </div>
  </section>
</div>
