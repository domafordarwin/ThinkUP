<div class="max-w-4xl mx-auto px-4 sm:px-6 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="page-title">학교 구성원 관리</h1>
    <%= link_to new_school_admin_member_path, class: "btn-primary" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/></svg>
      새 계정 생성
    <% end %>
  </div>

  <section class="mb-10">
    <h2 class="section-title mb-4">학생 (<%= @students.count %>명)</h2>
    <div class="space-y-3">
      <% @students.each do |student| %>
        <div class="card p-4 flex justify-between items-center">
          <div class="flex items-center gap-3 flex-wrap">
            <span class="font-semibold text-gray-900"><%= student.name %></span>
            <span class="text-sm text-gray-500"><%= student.email %></span>
            <span class="badge bg-primary-50 text-primary-700"><%= student.grade_level %>학년</span>
          </div>
          <%= link_to "상세", school_admin_member_path(student), class: "btn-secondary text-sm" %>
        </div>
      <% end %>
    </div>
  </section>

  <section>
    <h2 class="section-title mb-4">학부모 (<%= @parents.count %>명)</h2>
    <div class="space-y-3">
      <% @parents.each do |parent| %>
        <div class="card p-4 flex justify-between items-center">
          <div class="flex items-center gap-3 flex-wrap">
            <span class="font-semibold text-gray-900"><%= parent.name %></span>
            <span class="text-sm text-gray-500"><%= parent.email %></span>
          </div>
          <%= link_to "상세", school_admin_member_path(parent), class: "btn-secondary text-sm" %>
        </div>
      <% end %>
    </div>
  </section>
</div>
