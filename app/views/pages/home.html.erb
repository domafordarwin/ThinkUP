<div class="max-w-3xl mx-auto py-8 sm:py-16 text-center">
  <%# Hero section %>
  <h1 class="text-3xl sm:text-5xl font-bold mb-4 bg-gradient-to-r from-primary-700 via-primary-500 to-accent-500 bg-clip-text text-transparent leading-tight">
    ThinkUp
  </h1>
  <p class="text-base sm:text-lg text-gray-500 mb-10">발문으로 키우는 사고력</p>

  <% if user_signed_in? %>
    <% if current_user.student? %>
      <%# Student: main CTA %>
      <div class="space-y-4">
        <% if @current_session %>
          <%= link_to learning_session_path(@current_session), class: "btn-primary btn-lg inline-flex justify-center w-full sm:w-auto" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
            이어서 학습하기
          <% end %>
        <% else %>
          <%= button_to learning_sessions_path, method: :post, class: "btn-primary btn-lg w-full sm:w-auto" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/></svg>
            새 학습 시작
          <% end %>
        <% end %>

        <div class="flex justify-center gap-6 mt-6">
          <%= link_to dashboard_path, class: "text-sm text-gray-500 hover:text-primary-600 transition-colors flex items-center gap-1.5" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/></svg>
            내 대시보드
          <% end %>
          <%= link_to new_free_passage_path, class: "text-sm text-gray-500 hover:text-accent-600 transition-colors flex items-center gap-1.5" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
            자유 지문 학습
          <% end %>
        </div>
      </div>

    <% elsif current_user.school_admin? %>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 max-w-lg mx-auto">
        <div class="card p-6">
          <div class="text-2xl mb-3">👥</div>
          <h3 class="font-semibold text-gray-800 mb-2">구성원 관리</h3>
          <p class="text-sm text-gray-500 mb-4">학생과 교사를 관리합니다</p>
          <%= link_to "바로가기", school_admin_members_path, class: "btn-primary text-sm" %>
        </div>
        <div class="card p-6">
          <div class="text-2xl mb-3">📋</div>
          <h3 class="font-semibold text-gray-800 mb-2">프로그램 보기</h3>
          <p class="text-sm text-gray-500 mb-4">학습 프로그램을 확인합니다</p>
          <%= link_to "바로가기", school_admin_programs_path, class: "btn-secondary text-sm" %>
        </div>
      </div>

    <% elsif current_user.parent? %>
      <div class="card p-8 max-w-sm mx-auto">
        <div class="text-3xl mb-4">👨‍👩‍👧‍👦</div>
        <h3 class="font-semibold text-gray-800 mb-2">자녀 학습 현황</h3>
        <p class="text-sm text-gray-500 mb-5">자녀의 학습 진도와 성장을 확인하세요</p>
        <%= link_to "현황 보기", parent_children_path, class: "btn-primary" %>
      </div>

    <% elsif current_user.diagnosis_admin? %>
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 max-w-2xl mx-auto">
        <div class="card p-6">
          <div class="text-2xl mb-3">📊</div>
          <h3 class="font-semibold text-gray-800 mb-2">모니터링</h3>
          <p class="text-sm text-gray-500 mb-4">전체 현황을 파악합니다</p>
          <%= link_to "대시보드", diagnosis_admin_dashboard_path, class: "btn-primary text-sm" %>
        </div>
        <div class="card p-6">
          <div class="text-2xl mb-3">🏫</div>
          <h3 class="font-semibold text-gray-800 mb-2">학교 관리</h3>
          <p class="text-sm text-gray-500 mb-4">등록된 학교를 관리합니다</p>
          <%= link_to "바로가기", diagnosis_admin_schools_path, class: "btn-secondary text-sm" %>
        </div>
        <div class="card p-6">
          <div class="text-2xl mb-3">📝</div>
          <h3 class="font-semibold text-gray-800 mb-2">프로그램</h3>
          <p class="text-sm text-gray-500 mb-4">학습 프로그램을 관리합니다</p>
          <%= link_to "바로가기", diagnosis_admin_programs_path, class: "btn-secondary text-sm" %>
        </div>
      </div>

    <% elsif current_user.developer? %>
      <div class="card p-8 max-w-sm mx-auto">
        <div class="text-3xl mb-4">📄</div>
        <h3 class="font-semibold text-gray-800 mb-2">지문 관리</h3>
        <p class="text-sm text-gray-500 mb-5">학습 지문을 생성하고 관리합니다</p>
        <%= link_to "지문 관리", developer_passages_path, class: "btn-primary" %>
      </div>

    <% elsif current_user.system_admin? %>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 max-w-lg mx-auto">
        <div class="card p-6">
          <div class="text-2xl mb-3">⚙️</div>
          <h3 class="font-semibold text-gray-800 mb-2">계정 관리</h3>
          <p class="text-sm text-gray-500 mb-4">사용자 계정을 관리합니다</p>
          <%= link_to "바로가기", system_admin_users_path, class: "btn-primary text-sm" %>
        </div>
        <div class="card p-6">
          <div class="text-2xl mb-3">🔧</div>
          <h3 class="font-semibold text-gray-800 mb-2">시스템 설정</h3>
          <p class="text-sm text-gray-500 mb-4">시스템 설정을 변경합니다</p>
          <%= link_to "바로가기", system_admin_settings_path, class: "btn-secondary text-sm" %>
        </div>
      </div>
    <% end %>

  <% else %>
    <%# Non-logged-in hero %>
    <div class="space-y-6">
      <p class="text-gray-500 max-w-md mx-auto">
        질문을 만들고, AI와 대화하며, 생각의 깊이를 키워보세요.
      </p>
      <%= link_to new_user_session_path, class: "btn-primary btn-lg inline-flex" do %>
        시작하기
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/></svg>
      <% end %>
    </div>
  <% end %>

  <%# Announcements %>
  <% if @announcements.any? %>
    <section class="mt-16 text-left">
      <h2 class="section-title mb-5">공지사항</h2>
      <div class="space-y-3">
        <% @announcements.each do |announcement| %>
          <div class="card p-5">
            <div class="flex items-start justify-between gap-4">
              <div>
                <h3 class="font-medium text-gray-800"><%= announcement.title %></h3>
                <p class="text-sm text-gray-500 mt-1.5 leading-relaxed"><%= truncate(announcement.content, length: 100) %></p>
              </div>
              <span class="badge bg-gray-100 text-gray-500 shrink-0"><%= announcement.published_at.strftime("%m.%d") %></span>
            </div>
          </div>
        <% end %>
      </div>
    </section>
  <% end %>
</div>
